#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'
require 'bane'

config = Bane::CommandLineConfiguration.new()
begin
  servers = config.parse(ARGV)
rescue Bane::ConfigurationError => ce
  puts ce.message
  puts config.usage
  exit 1
end

if servers.empty?
  puts config.usage
  exit 0
end

launcher = Bane::Launcher.new(servers)
launcher.start
launcher.join
